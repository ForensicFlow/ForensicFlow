# =============================================================================
# FORENSICFLOW BACKEND ENVIRONMENT VARIABLES
# =============================================================================
# Copy this file to .env and fill in your actual values
# For Render deployment, add these values in the Render Dashboard

# =============================================================================
# DJANGO CORE SETTINGS
# =============================================================================
SECRET_KEY=django-insecure-dev-key-change-this-in-production-generate-a-new-one
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# For local development with PostgreSQL
USE_POSTGRES=True
DB_NAME=forensicflow
DB_USER=postgres
DB_PASSWORD=your-postgres-password
DB_HOST=localhost
DB_PORT=5432

# For Render deployment (automatically provided by Render)
# DATABASE_URL=postgresql://user:password@host:port/dbname

# =============================================================================
# REDIS CONFIGURATION (for Celery background tasks)
# =============================================================================
# For local development
REDIS_URL=redis://localhost:6379/0

# For Render deployment (automatically provided by Render)
# REDIS_URL=redis://red-xxxxx:6379

# =============================================================================
# AI API KEYS (at least one is required)
# =============================================================================
# Get your Gemini API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key-here

# Get your OpenAI API key from: https://platform.openai.com/api-keys (optional)
OPENAI_API_KEY=your-openai-api-key-here

# =============================================================================
# EMAIL CONFIGURATION (Gmail SMTP)
# =============================================================================
# For password reset and notifications
# Generate Gmail App Password: https://myaccount.google.com/apppasswords
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-gmail-app-password
DEFAULT_FROM_EMAIL=ForensicFlow <your-email@gmail.com>
SERVER_EMAIL=your-email@gmail.com

# =============================================================================
# FILE UPLOAD SETTINGS
# =============================================================================
MAX_UPLOAD_SIZE=500000000
MEDIA_ROOT=media

# =============================================================================
# CORS AND CSRF SETTINGS
# =============================================================================
# For local development
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000
CSRF_TRUSTED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173,http://localhost:3000

# For production (add your Render frontend URL)
# CORS_ALLOWED_ORIGINS=https://your-app.onrender.com
# CSRF_TRUSTED_ORIGINS=https://your-app.onrender.com

# =============================================================================
# FRONTEND URL
# =============================================================================
# For local development
FRONTEND_URL=http://localhost:5173

# For production
# FRONTEND_URL=https://your-app.onrender.com

# =============================================================================
# PRODUCTION SECURITY SETTINGS
# =============================================================================
# Enable SSL redirect in production (Render handles SSL automatically)
SECURE_SSL_REDIRECT=True

